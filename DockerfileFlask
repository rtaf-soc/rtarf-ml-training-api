FROM python:3.9

# Create app directory
WORKDIR /app

# Install app dependencies
COPY requirements-flask.txt ./

RUN pip install -r requirements-flask.txt

# Bundle app source
COPY server.py ./
COPY sharelib.py ./

EXPOSE 5000
# CMD [ "flask", "run","--host","0.0.0.0","--port","5000"]
CMD ["python", "server.py"]